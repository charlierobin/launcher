#tag WindowCode
	#tag Event
		Sub DropObject(obj As DragItem, action As Integer)
		  if obj.FolderItem.IsFolder and obj.FolderItem.Name.IndexOf( ".iconset" ) > -1 then
		    
		    var p as Picture = Picture.Open( obj.FolderItem.Child( "icon_512x512@2x.png" ) )
		    
		    if p <> nil then
		      
		      self.TextFieldIconPath.Text = obj.FolderItem.Child( "icon_512x512@2x.png" ).NativePath
		      
		    end if
		    
		  elseif obj.FolderItem.Parent.IsFolder and obj.FolderItem.Parent.Name.IndexOf( ".iconset" ) > -1 then
		    
		    var p as Picture = Picture.Open( obj.FolderItem.Parent.Child( "icon_512x512@2x.png" ) )
		    
		    if p <> nil then
		      
		      self.TextFieldIconPath.Text = obj.FolderItem.Parent.Child( "icon_512x512@2x.png" ).NativePath
		      
		    end if
		    
		  else
		    
		    var p as Picture = Picture.Open( obj.FolderItem )
		    
		    if p <> nil then
		      
		      self.TextFieldIconPath.Text = obj.FolderItem.NativePath
		      
		    end if
		    
		  end if
		  
		End Sub
	#tag EndEvent

	#tag Event
		Sub Open()
		  self.AcceptFileDrop( FileTypesAcceptableForIcons.All )
		  
		  
		End Sub
	#tag EndEvent


	#tag Method, Flags = &h0
		Sub ShowModalWithin(parentWindow as Window, json as JSONItem)
		  self.json = json
		  
		  self.TextFieldName.Text = self.json.Value( "name" )
		  
		  self.TextFieldIconPath.Text = self.json.Value( "icon" )
		  
		  super.ShowModalWithin( parentWindow )
		  
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h21
		Private Sub updateButtons()
		  if self.TextFieldName.Text <> self.json.Value( "name" ) or self.TextFieldIconPath.Text <> self.json.Value( "icon" ) then
		    
		    if self.TextFieldName.Text <> "" then
		      
		      self.PushButtonOK.Enabled = true
		      
		    else
		      
		      self.PushButtonOK.Enabled = false
		      
		    end if
		    
		  else
		    
		    self.PushButtonOK.Enabled = false
		    
		  end if
		  
		  //check icon file, handle existing iconsets, or graphic from which iconset will be generated at build
		  
		  
		End Sub
	#tag EndMethod


	#tag Property, Flags = &h21
		Private json As JSONItem
	#tag EndProperty


