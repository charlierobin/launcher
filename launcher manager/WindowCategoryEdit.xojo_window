#tag Events TextFieldIconPath
	#tag Event
		Sub TextChange()
		  self.CanvasIconPreview.Invalidate()
		  
		  if me.Text = "" then
		    
		    self.PushButtonIconClear.Enabled = false
		    
		  else
		    
		    self.PushButtonIconClear.Enabled = true
		    
		  end if
		  
		  self.updateButtons()
		  
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events PushButtonOK
	#tag Event
		Sub Action()
		  var nameNew as String = self.TextFieldName.Text
		  
		  var iconNew as String = self.TextFieldIconPath.Text
		  
		  if nameNew <> self.json.Value( "name" ) or iconNew <> self.json.Value( "icon" ) then
		    
		    self.json.Value( "name" ) = nameNew
		    
		    self.json.Value( "icon" ) = iconNew
		    
		    WindowMain.categoryWasUpdated( self.json )
		    
		  end if
		  
		  self.Close()
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events PushButtonIconSelectFile
	#tag Event
		Sub Action()
		  var f as FolderItem = FolderItem.ShowOpenFileDialog( FileTypesAcceptableForIcons.All )
		  
		  if f <> nil then
		    
		    if f.NativePath.IndexOf( ".iconset" ) > -1 then
		      
		      self.TextFieldIconPath.Text = f.Parent.NativePath + "/icon_512x512@2x.png"
		      
		    else
		      
		      self.TextFieldIconPath.Text = f.NativePath
		      
		    end if
		    
		  end if
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events PushButtonIconClear
	#tag Event
		Sub Action()
		  self.TextFieldIconPath.Text = ""
		  
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events CanvasIconPreview
	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  if self.TextFieldIconPath.Text = "" then
		    
		    g.DrawingColor = Color.LightGray
		    
		    g.DrawRectangle( 0, 0, g.Width, g.Height )
		    
		  else
		    
		    var f as FolderItem = new FolderItem( self.TextFieldIconPath.Text, FolderItem.PathModes.Native )
		    
		    if f.Exists then
		      
		      var p as Picture = Picture.Open( f )
		      
		      if p is nil then
		        
		        g.DrawingColor = Color.Red
		        
		        g.DrawRectangle( 0, 0, g.Width, g.Height )
		        
		      else
		        
		        g.DrawPicture( p, 0, 0, g.Width, g.Height, 0, 0, p.Width, p.Height )
		        
		      end if
		      
		    else
		      
		      g.DrawingColor = Color.Red
		      
		      g.DrawRectangle( 0, 0, g.Width, g.Height )
		      
		    end if
		    
		  end if
		  
		  
		End Sub
	#tag EndEvent
