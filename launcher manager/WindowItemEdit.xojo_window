#tag Events PushButtonOK
	#tag Event
		Sub Action()
		  var nameNew as String = self.TextFieldName.Text
		  
		  var commandNew as String = self.TextFieldCommand.Text
		  
		  if nameNew <> self.json.Value( "name" ) or commandNew <> self.json.Value( "path" ) then
		    
		    self.json.Value( "name" ) = nameNew
		    
		    self.json.Value( "path" ) = commandNew
		    
		    WindowMain.itemWasUpdated( self.json )
		    
		  end if
		  
		  self.Close()
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events PushButtonSelect
	#tag Event
		Sub Action()
		  var f as FolderItem = FolderItem.ShowOpenFileDialog( FileTypeAny.All )
		  
		  if f <> nil then
		    
		    self.TextFieldCommand.Text = f.NativePath
		    
		  end if
		  
		End Sub
	#tag EndEvent
#tag EndEvents
