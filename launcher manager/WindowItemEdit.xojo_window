#tag WindowCode
	#tag Event
		Sub DropObject(obj As DragItem, action As Integer)
		  if not obj.FolderItem.IsFolder then
		    
		    self.TextFieldCommand.Text = obj.FolderItem.NativePath
		    
		  end if
		  
		End Sub
	#tag EndEvent

	#tag Event
		Sub Open()
		  self.AcceptFileDrop( FileTypeAny.All )
		  
		  
		End Sub
	#tag EndEvent


	#tag Method, Flags = &h0
		Sub ShowModalWithin(parentWindow as Window, json as JSONItem)
		  self.json = json
		  
		  self.TextFieldName.Text = self.json.Value( "name" )
		  
		  self.TextFieldCommand.Text = self.json.Value( "path" )
		  
		  super.ShowModalWithin( parentWindow )
		  
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h21
		Private Sub updateButtons()
		  if self.TextFieldName.Text = "" or self.TextFieldCommand.Text = "" then
		    
		    self.PushButtonOK.Enabled = false
		    
		  elseif self.TextFieldName.Text <> self.json.Value( "name" ) or self.TextFieldCommand.Text <> self.json.Value( "path" ) then
		    
		    self.PushButtonOK.Enabled = true
		    
		  else
		    
		    self.PushButtonOK.Enabled = false
		    
		  end if
		  
		  if self.TextFieldCommand.Text <> "" and self.TextFieldCommand.Text.IndexOf( "mailto:" ) = -1 and self.TextFieldCommand.Text.IndexOf( "http://" ) = -1 and self.TextFieldCommand.Text.IndexOf( "https://" ) = -1 then
		    
		    var f as FolderItem = new FolderItem( self.TextFieldCommand.Text, FolderItem.PathModes.Native )
		    
		    if f.Exists then
		      
		      if not f.IsFolder or f.Name.IndexOf( ".app" ) > 0 then
		        
		        self.PushButtonOK.Enabled = true
		        
		      else
		        
		        self.PushButtonOK.Enabled = false
		        
		      end if
		      
		    else
		      
		      self.PushButtonOK.Enabled = false
		      
		    end if
		    
		  end if
		  
		End Sub
	#tag EndMethod


	#tag Property, Flags = &h21
		Private json As JSONItem
	#tag EndProperty


